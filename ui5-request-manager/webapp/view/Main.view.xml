<mvc:View
    controllerName="com.company.ui5.requestmanager.ui5requestmanager.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="mainPage"
        title="{i18n>mainPageTitle}"
    >
        <content>
            <List
                id="mainList"
                items="{/requests}"
            >
                <StandardListItem
                    id="mainListItem"
                    title="{requestName}"
                    description="{requestDescription}"
                    info="{status}"
                    type="Navigation"
                    infoState="{= ${status} === 'Pending' ? 'Warning' : ${status} === 'Approved' ? 'Success' : 'Error'}"
                    press=".onRequestSelect"
                />
            </List>
        </content>
    </Page>
</mvc:View>
